<!doctype html>
<html>
<head>
    <title>COVID-19 Daily Symptom Tracker</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="profile.css">
</head>
<body>

<div class="contain">

    <div class="text-center">
      <h1 class="top">Daily Symptom Tracker</fdeletdh1>
      <nav>
        <a href="/profile" class="btn btn-default btn-sm">Profile</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </nav>
    </div>
    <div class="row">
        <div class="col-sm-6">

          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
              <% if( messages[i].delete== 'no'){ %>
                <% if( messages[i].name == user.local.email){ %>

            <li class="message">
              <span id="emailHold"><%= messages[i].name %></span>
              <span><%= messages[i].msg %></span>
              <span><%= messages[i].date %></span>
              <span><i class="fa fa-minus-circle" aria-hidden="true"></i></span>
            </li>
          <% } %>
            <% } %>
            <% } %>
          </ul>
          <h2 class="symptomEntry">Enter Your Symptoms Here</h2> <!--bottomh--> 
        <% if (user.local.email) { %>

          <form action="/messages" method="POST">

            <input id="emailHold" type="text" value="<%= user.local.email %>" name="name">

            <textarea id="post" name="msg" type="text"  placeholder="Post here"></textarea>
             <input class="date" type="date" name="date" value="">

            <!-- <button class="resBtn" type="reset">Reset</button> -->
            <button class="subBtn" type="submit">Submit</button>
            
          </form>
          <div class="text-center"></div>
        </div>
        <% } %>

</div>
</div>


<script src="main.js"></script>

</body>
</html>
